.card{
  width: 750rpx;
  background-color: #f8f8f8;
}
.holdtext{
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #333333;
}
.sticky{
  width: 750rpx;
  height: 100rpx;
  background-color: #59c83b;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.home{
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #ffffff;
}

.comments{
  width: 750rpx;
  display: flex;
  flex-direction: column;
}
.comment{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  justify-content: center;
  box-sizing: border-box;
  margin-top: 5rpx;
  background-color: #ffffff;
}
.avator{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.commentTxt{
  flex: 1;
  margin-left: 15rpx;
  padding-top: 25rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #333333;
}