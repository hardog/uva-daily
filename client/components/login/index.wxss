.login-wrapper{
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
}
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background:#000000;
  opacity: 0.3;
  z-index: -1;
}
.login{
  width: 540rpx;
  height: 640rpx;
  background-color: #ffffff;
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.uva{
  width: 400rpx;
  height: 400rpx;
}
.title{
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  color: rgba(0,0,0,1);
}

.action{
  width: 460rpx;
  height: 108rpx;
  line-height: 108rpx;
  margin-top: 20rpx;
  background: rgba(0,113,255,1);
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: rgba(255,255,255,1);
  text-align: center;
}